FROM node:20-alpine AS builder

WORKDIR /app

# Copiar arquivos de depend√™ncias
COPY package*.json ./
COPY tsconfig.json ./
COPY tsconfig.node.json ./
COPY tsconfig.app.json ./
COPY vite.config.ts ./
COPY tailwind.config.ts ./
COPY postcss.config.js ./
COPY index.html ./

# Instalar depend√™ncias
RUN npm ci

# Build da aplica√ß√£o - DECLARAR ARGS E ENVS ANTES DE COPIAR C√ìDIGO
# Vari√°veis de ambiente do frontend (opcionais, com valor padr√£o no c√≥digo)
ARG VITE_WEBHOOK_URL=""
ARG VITE_API_BASE_URL=""

# DEBUG: Mostrar os ARGs recebidos
RUN echo "==================================" && \
    echo "üîç DEBUG - ARGs recebidos do docker build:" && \
    echo "ARG VITE_API_BASE_URL='${VITE_API_BASE_URL}'" && \
    echo "ARG VITE_WEBHOOK_URL='${VITE_WEBHOOK_URL}'" && \
    echo "=================================="

# Setar como vari√°veis de ambiente para o Vite
ENV VITE_WEBHOOK_URL=${VITE_WEBHOOK_URL}
ENV VITE_API_BASE_URL=${VITE_API_BASE_URL}

# DEBUG: Confirmar ENVs
RUN echo "==================================" && \
    echo "üîç DEBUG - ENVs setadas:" && \
    echo "ENV VITE_API_BASE_URL='${VITE_API_BASE_URL}'" && \
    echo "ENV VITE_WEBHOOK_URL='${VITE_WEBHOOK_URL}'" && \
    env | grep VITE_ || echo "Nenhuma vari√°vel VITE_ encontrada!" && \
    echo "=================================="

# Copiar c√≥digo fonte
COPY src ./src
COPY public ./public

RUN npm run build

# DEBUG: Verificar se a vari√°vel foi embutida no build
RUN echo "==================================" && \
    echo "üîç Verificando se backend.casayme.com.br est√° no build:" && \
    (grep -r "backend.casayme.com.br" dist/assets/*.js && echo "‚úÖ Encontrado!") || echo "‚ùå N√ÉO encontrado!" && \
    echo "üîç Verificando o que est√° no api.ts compilado:" && \
    grep -A2 -B2 "API_BASE_URL" dist/assets/*.js | head -20 && \
    echo "=================================="

# Est√°gio de produ√ß√£o com Nginx
FROM nginx:alpine

# Instalar wget para healthcheck
RUN apk add --no-cache wget

# Copiar arquivos buildados
COPY --from=builder /app/dist /usr/share/nginx/html

# Copiar configura√ß√£o do Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expor porta 80
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost/health || exit 1

CMD ["nginx", "-g", "daemon off;"]

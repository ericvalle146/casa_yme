FROM node:20-alpine AS builder

WORKDIR /app

# Copiar arquivos de depend√™ncias
COPY package*.json ./
COPY tsconfig.json ./
COPY tsconfig.node.json ./
COPY tsconfig.app.json ./
COPY vite.config.ts ./
COPY tailwind.config.ts ./
COPY postcss.config.js ./
COPY index.html ./

# Instalar depend√™ncias
RUN npm ci

# Copiar c√≥digo fonte
COPY src ./src
COPY public ./public

# Build da aplica√ß√£o
# Vari√°veis de ambiente do frontend (opcionais, com valor padr√£o no c√≥digo)
ARG VITE_WEBHOOK_URL
ARG VITE_API_BASE_URL
ENV VITE_WEBHOOK_URL=${VITE_WEBHOOK_URL}
ENV VITE_API_BASE_URL=${VITE_API_BASE_URL}

# DEBUG: Mostrar as vari√°veis que Vite vai usar
RUN echo "üîç DEBUG - Vari√°veis de ambiente durante o build:" && \
    echo "VITE_API_BASE_URL=${VITE_API_BASE_URL}" && \
    echo "VITE_WEBHOOK_URL=${VITE_WEBHOOK_URL}" && \
    env | grep VITE || true

RUN npm run build

# DEBUG: Verificar se a vari√°vel foi embutida no build
RUN echo "üîç Verificando se backend.casayme.com.br est√° no build:" && \
    grep -r "backend.casayme.com.br" dist/assets/*.js && echo "‚úÖ Encontrado!" || echo "‚ùå N√ÉO encontrado!"

# Est√°gio de produ√ß√£o com Nginx
FROM nginx:alpine

# Instalar wget para healthcheck
RUN apk add --no-cache wget

# Copiar arquivos buildados
COPY --from=builder /app/dist /usr/share/nginx/html

# Copiar configura√ß√£o do Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expor porta 80
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost/health || exit 1

CMD ["nginx", "-g", "daemon off;"]
